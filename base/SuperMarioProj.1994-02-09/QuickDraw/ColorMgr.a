		MOVE.L		QDColors,A0					; GET DEFAULT COLORS
		LEA			2(A0,D0*8),A0				; point to proper entry
		MOVE.L		(A0)+,(A1)+					; copy red, green
		MOVE		(A0)+,(A1)+					; copy blue
		BRA.S		DONE						; => all done

