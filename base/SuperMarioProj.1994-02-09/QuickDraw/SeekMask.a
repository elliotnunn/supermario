			MOVEQ	#3,D3						;DO 4 BYTES OF SRC
@DOQUAD		ROL.L	#8,D0						;GET NEXT BYTE OF SRC
			MOVE.B	D0,D2						;MAKE AN EXTRA COPY
			MOVE.L	(TABLE4,PC,D2*4),(A0)+
			DBRA	D3,@DOQUAD					;=>QUAD NEXT BYTE
			JMP		(A5)						;AND RETURN

				
		
