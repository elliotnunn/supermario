		SUBQ 	#1,HEIGHT(A6)			;DECREMENT ROWCOUNT
		BNE.S	ROWLOOP					;LOOP FOR ALL SRCROWS
GOHOME	RTS								;THEN QUIT
		
NXTPAT	
