		macro
		_NewHandleCommaTemp
		import	NewHandleCommaTemp
		bsr		NewHandleCommaTemp
		endm

		macro
		rtd_a0 &params
			if &eval(&params) = 0 then
				rts
			else
				if &setting('MACHINE') <> 'MC68000' then
					rtd #&params
				else
					if &eval(&params) = 4 then
						move.l (sp)+,(sp)
						rts
					elseif &eval(&params) <= 8 then
						move.l (sp)+,a0
						addq #&params,sp
						jmp (a0)
					else
						move.l (sp)+,a0
						lea &params(sp),sp
						jmp (a0)
					endif
				endif
			endif
		endm

