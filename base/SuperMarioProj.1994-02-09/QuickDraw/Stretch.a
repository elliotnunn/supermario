EIGHTS1 ADD 	D0,D0						;GET ONE SRC BIT IN CARRY
		BNE.S	EIGHTS2 					;TIME FOR NEW SRC ?
		MOVE	(A0)+,D0					;YES, GET NEXT SRC LONG
