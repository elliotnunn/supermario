		MOVE.B	D2,(A1)+					;PUT THIRD BYTE TO DST
		CMP.L	A2,A1						;IS DSTPTR >= DSTLIMIT ?
		BLO 	ONE_5						;NO, LOOP FOR MORE
		RTS 								;ALL DONE

