DONESCL
		moveq	#1,d0						;force 32-bit mode							<1.5>
		_rSwapMMUMode						;get previous mode in d0.b (can trash a0/a1/a2, d0/d1/d2)

		ADDA.W	#10,SP						;release buffers
		MOVEM.L	(SP)+,A3-A5/D7				;RESTORE WORK REGISTERS
