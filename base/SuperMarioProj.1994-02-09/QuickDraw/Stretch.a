		MOVE	D0,D1						;MAKE AN EXTRA COPY
		LSR.B	#4,D1						;GET HI NIBBLE
		MOVE.B	TABLE15(D1),D2				;EXPAND TO 6 BITS
		LSL.L	#6,D2						;SHIFT OVER 6
