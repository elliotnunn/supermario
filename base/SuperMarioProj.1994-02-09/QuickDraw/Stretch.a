		MOVE.B	TABLE3B(D1),(A1)+			;PUT SECOND BYTE TO DST
		AND 	#$7,D0						;GET 3 LO BITS
		MOVE.B	TABLE3C(D0),(A1)+			;PUT THIRD BYTE TO DST
		CMP.L	A2,A1						;IS DSTPTR >= DSTLIMIT ?
		BLO 	TRIPLE						;NO, LOOP FOR MORE
		RTS 								;ALL DONE

