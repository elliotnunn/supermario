		MOVE	D4,D3						;COPY RATIO
		LSR 	#1,D3						;INIT ERR TO RATIO/2
		cmp.w	#16,d5						;16 bits/pixel?		<KON 2/22/90>
		beq.s	averageH16					;yes, average		<KON 2/22/90>

