		MOVE.L	(A1),A1						;GET EXPAT POINTER

THRTWO2	MOVE.B	(A0)+,D0					;GET A BYTE OF PATTERN
		EOR.B	D7,D0						;INVERT IT IF MODE BIT 2
		ROL.B	D2,D0						;ALIGN TO LOCAL COORDS

		MOVEQ	#7,D1						;8 BITS PER BYTE
