		TST.L	D6							;DO OLD WAY?
		BPL.S	@1							;NO, SKIP
		MOVE	D3,32-2(A1)					;YES, MAKE 2 COPIES
		SUBQ	#3,D1						;SHORT CIRCUIT INNER LOOP
@1		DBRA	D1,SXTN3					;LOOP UNTIL DONE
