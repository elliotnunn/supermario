@skip	addq.l	#4,a1			;bump dst ptr
		addq.l	#4,d6			;bump src index
		and.w	d4,d6			;constrict to the source long if in a pattern mode
		DBRA	D2,@blit		;LOOP ALL LONGS THIS ROW
