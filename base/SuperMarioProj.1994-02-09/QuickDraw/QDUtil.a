		MOVE.W	(SP)+,D1						;Restore work register
		ROR.L	#8,D0							;reposition high byte
		RTS

@inROM
		or.w	#$0408,d0						;set up ROM address
		ROR.L	#4,D0							;restore address
		ROR.L	#8,D0							;restore address
