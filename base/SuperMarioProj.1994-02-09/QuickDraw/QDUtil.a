		BPL		@noalpha					;yes, alpha mode is illegal
		MOVE.W	dstPix+pixelSize(A6),D0		;get depth of destination
		CMP.W	#16,D0						;direct device?
		BLT		@noalpha					;no, skip this stuff											; <SM4>
