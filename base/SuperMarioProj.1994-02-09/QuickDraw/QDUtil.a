		BNE.S	@loopTop				;loop if haven’t finished a long yet
		MOVEQ	#-1,D3					;flush the mask
		SUBQ	#1,D2					;decrement long counter
@loopEnd
		BGT.S	@loopTop				;do it for all of the pixels on the line (or within the mask)
		BEQ.S	@loopRight
