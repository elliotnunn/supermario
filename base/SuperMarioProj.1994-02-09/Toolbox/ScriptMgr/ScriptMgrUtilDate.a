		beq.s	@NoAltSpace 			; no									<8/22/87med>
		move.b	#' '+$80,altSpace(a6)	; use alt space.
@NoAltSpace

		WITH	Cache

		lea		aLongDate(a6),a0		; @temp
		clr.l	(a0)+					; no high
		move.l	Time,(a0)+				; low = current
