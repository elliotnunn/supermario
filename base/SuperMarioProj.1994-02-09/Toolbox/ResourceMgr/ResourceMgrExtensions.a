				bne.s	@exitFontFile					; No
				moveq	#1,d0							; Set to true if this is a font file
@exitFontFile
				unlk	a6
				move.l	(sp)+,a0						; <49>
				addq	#paramSize,sp					; <49> Pop parameters
				jmp		(a0)							; <49>

				String	Asis							; <34>
fileTypeTable											; <34>
				dc.b	'ffil', 'tfil', 'FFIL'			; <34>
				dc.l	0								; <34>
				String	Pascal							; <34>
				EndProc


;
